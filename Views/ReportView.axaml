<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CoffeeShopApp.Views.ReportView">
  <StackPanel Spacing="10">
    <TextBlock Text="Report" FontSize="22" FontWeight="Bold"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <CalendarDatePicker SelectedDate="{Binding From}"/>
      <CalendarDatePicker SelectedDate="{Binding To}"/>
      <Button Content="Load" Command="{Binding LoadCmd}"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,8">
      <TextBlock Text="Total Orders:" FontWeight="SemiBold"/>
      <TextBlock Text="{Binding TotalOrders}"/>
      <TextBlock Text="Total Revenue:" FontWeight="SemiBold" Margin="20,0,0,0"/>
      <TextBlock Text="{Binding TotalRevenue, StringFormat='${0:F2}'}"/>
    </StackPanel>
    <ListBox ItemsSource="{Binding Rows}" Height="400">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Border Classes="card" Padding="8" Margin="6">
            <Grid ColumnDefinitions="*,Auto,Auto" VerticalAlignment="Center">
              <TextBlock Text="{Binding DateLocalString}" VerticalAlignment="Center"/>
              <TextBlock Grid.Column="1" Text="{Binding Orders, StringFormat='Orders: {0}'}" Margin="12,0" VerticalAlignment="Center"/>
              <TextBlock Grid.Column="2" Text="{Binding Revenue, StringFormat='${0:F2}'}" Margin="12,0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
          </Border>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>
</UserControl>
